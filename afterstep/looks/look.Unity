  Font		DefaultSans.ttf-14
  TextStyle	0
  ~MyStyle

MyStyle "focused_window_style"
  Inherit	"window_font"
  TextStyle	9
  ForeColor     ActiveText
  BackPixmap    125 bars/title_tile_unity_bottom
  ~MyStyle

MyStyle "unfocused_window_style"
  Inherit       "window_font"
  TextStyle	9
  ForeColor     InactiveText1Dark
  BackPixmap    125 bars/title_tile_unity_bottom
  ~MyStyle

MyStyle "sticky_window_style"
